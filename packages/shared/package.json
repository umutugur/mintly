{
  "name": "@mintly/shared",
  "version": "1.0.0",
  "description": "Shared types, schemas, and API client for Montly",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "react-native": "src/index.ts",
  "exports": {
    ".": {
      "react-native": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "node": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "montly",
    "shared"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.29.3",
  "dependencies": {
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.9.3"
  }
}