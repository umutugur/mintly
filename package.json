{
  "name": "mintly",
  "private": true,
  "workspaces": ["apps/*", "packages/*"],
  "packageManager": "pnpm@10.29.3",
  "main": "apps/mobile/index.ts",

  "scripts": {
    "dev": "turbo run dev",
    "eas-build-pre-install": "corepack enable && corepack prepare pnpm@10.29.3 --activate && pnpm -v",
    "dev:mobile": "turbo run dev --filter=mobile",
    "dev:api": "turbo run dev --filter=api",
    "build": "turbo run build",
    "lint": "pnpm i18n:check && turbo run lint",
    "lint:i18n": "turbo run lint:i18n",
    "i18n:check": "node scripts/i18n/check-locales.mjs && node scripts/i18n/check-hardcoded-strings.mjs",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "start:api": "pnpm -C apps/api start:prod",
    "start:mobile": "pnpm -C apps/mobile start",
    "smoke:api": "node scripts/smoke-api.mjs"
  },
  "devDependencies": {
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^8.57.1",
    "expo": "~54.0.33",
    "turbo": "^2.8.9",
    "typescript": "^5.9.3"
  }
}
